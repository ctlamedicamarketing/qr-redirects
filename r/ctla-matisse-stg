<main>
  <h1>Redirecting…</h1>
  <p>If you’re not redirected automatically, 
    <a id="link" href="https://api.sherbert.cimpress.io/v2/assets/uuwYO0817Y4KRA03tWAUg~100?signature=a2c21f13cba8bb225a7579eebfe6e06de8a1930d&showDeleted=false" rel="external nofollow noopener">click here</a>.
  </p>
  <p class="hint">UTM parameters and #hash anchors are preserved for analytics and deep links.</p>
</main>

<script>
(function () {
  var DEST = "https://api.sherbert.cimpress.io/v2/assets/uuwYO0817Y4KRA03tWAUg~100?signature=a2c21f13cba8bb225a7579eebfe6e06de8a1930d&showDeleted=false";
  var metaCanon = document.getElementById("canonical");
  if (metaCanon && metaCanon.getAttribute("data-dest")) DEST = metaCanon.getAttribute("data-dest");

  // === Parameter pass-through ===
  var PASS_MODE = "allow";
  var LIST = ["utm_source","utm_medium","utm_campaign","utm_term","utm_content","gclid","fbclid"];
  var ADD_CACHE_BUSTER = true;
  var LOOP_GUARD = true;

  function safeURL(href) { try { return new URL(href); } catch (e) { var a = document.createElement('a'); a.href = href; return new URL(a.href); } }

  var target = safeURL(DEST);
  var incoming = safeURL(window.location.href);

  // Pass through allowed params
  incoming.searchParams.forEach(function (v, k) {
    if (PASS_MODE === "allow" && LIST.indexOf(k) !== -1) target.searchParams.set(k, v);
    if (PASS_MODE === "deny"  && LIST.indexOf(k) === -1) target.searchParams.set(k, v);
  });

  // Preserve hash
  if (incoming.hash) target.hash = incoming.hash;

  // Add cache buster
  if (ADD_CACHE_BUSTER) target.searchParams.set("_r", Date.now().toString(36));

  // Update link + meta refresh
  var finalHref = target.toString();
  document.getElementById("link").href = finalHref;
  document.getElementById("meta-refresh").setAttribute("content", "0;url=" + finalHref);
  document.getElementById("canonical").setAttribute("href", target.origin + target.pathname);

  // Redirect
  location.replace(finalHref);
})();
</script>

